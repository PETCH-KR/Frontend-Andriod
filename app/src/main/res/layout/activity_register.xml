<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginBottom="20dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#00ff"
                app:srcCompat="@drawable/choose_back" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="해외 이동봉사 신청하기"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:background="#f5f5f5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="#f5f5f5"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:text="봉사자 기본 정보"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="left">

            <ImageButton
                android:id="@+id/userimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                app:srcCompat="@drawable/mypage_pic"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/careInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="27dp">

                        <ImageView
                            android:id="@+id/passport_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:text="여권"/>

                        <ImageView
                            android:id="@+id/verify_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="115dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:text="신분증"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp">

                        <ImageView
                            android:id="@+id/email_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:text="이메일 주소"/>

                        <ImageView
                            android:id="@+id/number_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="65dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginLeft="6dp"
                            android:text="전화번호"/>


                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:text="이동봉사 가능 날짜"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/searchresult_blank"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <ImageButton
                        android:id="@+id/start"
                        android:layout_width="160dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="17dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="출발지"
                        android:backgroundTint="@color/white"
                        ></ImageButton>

                    <TextView
                        android:id="@+id/startText"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="17dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="35dp"
                        android:gravity="center_vertical"
                        android:text="출발지"
                        ></TextView>

                    <ImageButton
                        android:id="@+id/end"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="17dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="220dp"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:text="도착지"
                        ></ImageButton>

                    <TextView
                        android:id="@+id/endText"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="17dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="230dp"
                        android:gravity="center_vertical"
                        android:text="도착지"
                        ></TextView>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/searchresult_blank"
                        android:layout_marginTop="70dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <ImageButton
                        android:id="@+id/start_btn"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="77dp"
                        android:gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:backgroundTint="@color/white"
                        android:text="기한1"></ImageButton>

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="77dp"
                        android:gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:text="기한1"></TextView>

                    <ImageButton
                        android:id="@+id/end_btn"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="77dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="215dp"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:text="기한2"
                        ></ImageButton>

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="77dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="230dp"
                        android:gravity="center_vertical"
                        android:text="기한2"
                        ></TextView>

                    <ImageButton
                        android:id="@+id/swapBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="#00ff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/register_swapicon" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:text="강아지 세부정보 확인"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/Info"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dogPic"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/dog"
                        />
                    <TextView
                        android:id="@+id/dogInfo"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:textSize="14dp"
                        android:text="품종 : 믹스견 \n보호기관 : 00보호기관\n출국 가능 마감일 : 2021-01--01\n등록일 : 2021-01-01"/>

                </LinearLayout>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#f5f5f5"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#f5f5f5"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#f5f5f5"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#f5f5f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:text="담당 기관 정보"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/careName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:text="00보호기관"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/careNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:text="00-0000-0000" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:text="기관 주소"
                      />

                    <TextView
                        android:id="@+id/careAddress"
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f5f5f5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/company_passport_check"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="비영리 사업자등록증"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/company_verify_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/mypage_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="자원봉사단체 등록증"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="35dp"
                        android:text="기관에서 제공하는 봉사자 케어 리스트"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="25dp"
                            android:background="#f5f5f5"
                            android:text="" />

                        <ImageView
                            android:id="@+id/list1_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/info_checked" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="25dp"
                            android:background="#f5f5f5"
                            android:text="" />

                        <ImageView
                            android:id="@+id/list2_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/info_unchecked" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="25dp"
                            android:background="#f5f5f5"
                            android:text="" />

                        <ImageView
                            android:id="@+id/list3_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/info_unchecked" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:text="봉사 지원동기"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/user_motivate"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/searchresult_btn_custom"
                            android:padding="10dp"
                            android:inputType="textMultiLine"
                            android:lines="8"
                            android:minLines="6"
                            android:maxLines="10"
                            android:textSize="15dp"
                            android:hint="이동봉사 지원동기를 작성해주세요."
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:scrollbars="vertical"
                        />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:text="기타 이력 작성하기"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"/>

                            <ImageButton
                                android:id="@+id/input_photo"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="45dp"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/register_inputphoto"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/photoView"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/register_nullphoto"
                                android:background="@drawable/searchresult_btn_custom"/>

                        <EditText
                            android:id="@+id/user_plusText"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/searchresult_btn_custom"
                            android:padding="10dp"
                            android:inputType="textMultiLine"
                            android:lines="8"
                            android:minLines="6"
                            android:maxLines="12"
                            android:textSize="15dp"
                            android:hint="기타 이력을 작성해주세요."
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_width="fill_parent"
                            android:scrollbars="vertical"
                            />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/registerBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/register_registerbtn"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>