<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:layout_gravity="center"
                android:src="@drawable/login_logo" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="40dp"
                    app:srcCompat="@drawable/join_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/applefont"
                    android:text="이메일"
                    android:textColor="#d8d8d8"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/emailText"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applefont"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="110dp"
                    android:textSize="16dp"
                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="40dp"
                    app:srcCompat="@drawable/join_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applefont"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="#d8d8d8"
                    android:text="비밀번호"/>

                <EditText
                    android:id="@+id/pwdText"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/applefont"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:scrollbars="horizontal"
                    android:textSize="16dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="right">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="0dp"
                    android:textColor="#707070"
                    android:stateListAnimator="@null"
                    android:text="비밀번호 찾기" />

            </FrameLayout>


            <ImageButton
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="#00ff"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:src="@drawable/login_login" />

            <ImageButton
                android:id="@+id/join"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00ff"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:src="@drawable/login_join" />

            <ImageView
                android:id="@+id/or"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/login_or" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp">

                <ImageButton
                    android:id="@+id/google_login"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00ff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_google" />

                <ImageButton
                    android:id="@+id/kakao_login"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00ff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_kakao" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/without_login"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ff"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_loginstart" />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>