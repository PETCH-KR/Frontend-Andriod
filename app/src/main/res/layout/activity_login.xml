<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="이메일   "
                    android:fontFamily="@font/applefont"
                    android:textColor="#d8d8d8"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/emailText"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#d8d8d8"
                    android:hint=" "
                    android:fontFamily="@font/applefont"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:scrollbars="horizontal"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/applefont"
                    android:textColor="#d8d8d8"
                    android:text="비밀번호" />

                <EditText
                    android:id="@+id/pwdText"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#d8d8d8"
                    android:gravity="center"
                    android:hint=" "
                    android:fontFamily="@font/applefont"
                    android:inputType="textPassword"
                    android:scrollbars="horizontal"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="right">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00ff"
                    android:src="@drawable/login_findpwd" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ff"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/login_login" />

            <ImageButton
                android:id="@+id/join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#00ff"
                android:scaleType="fitCenter"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/login_join" />

            <ImageView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginTop="8dp"
                android:src="@drawable/login_or" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp">

                <ImageButton
                    android:id="@+id/google_login"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00ff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_google" />

                <ImageButton
                    android:id="@+id/kakao_login"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00ff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_kakao" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/without_login"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ff"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_loginstart" />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>