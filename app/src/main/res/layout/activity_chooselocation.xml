<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:gravity="left"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#00ff"
                app:srcCompat="@drawable/choose_back"
                />

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="어디서 출발하시나요?"
                />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_marginBottom="100dp"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:text="대한민국 (KR)"
                android:textSize="15dp"
                android:backgroundTint="#00ff"
                />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/choose_line" />

            <Button
                android:id="@+id/GMP"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="김포공항 (GMP)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <Button
                android:id="@+id/INC"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="인천공항 (INC)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <Button
                android:id="@+id/CJU"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="제주공항 (CJU)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:text="미국 (US)"
                android:textSize="15dp"
                android:backgroundTint="#00ff"
                />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/choose_line" />

            <Button
                android:id="@+id/LAX"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="로스앤젤레스인터네셔널,CA (LAX)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/SFO"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="샌프란시스코인터네셔널 (SFO)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/JFK"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="뉴욕존에프케네디 (JFK)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <Button
                android:id="@+id/EWR"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="뉴욕뉴왁 (EWR)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/LGA"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:onClick="onClick"
                android:text="뉴욕라과디아 (LGA)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/SWF"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="스튜어트 국제 (SWF)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/HNL"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="호놀룰루, 하와이 (HNL)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/BOS"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="보스턴로간인터네셔널 (BOS)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:text="캐나다 (CA)"
                android:textSize="15dp"
                android:backgroundTint="#00ff"
                />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/choose_line" />


            <Button
                android:id="@+id/YYZ"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="토론토피어슨인터내셔널 (YYZ)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />

            <Button
                android:id="@+id/YKF"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="키치너/워털루 (YKF)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/YHM"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="해밀튼 (YHM)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/YVR"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="밴쿠버인터내셔널 (YVR)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/YXX"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="아보츠포드 (YXX)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
            <Button
                android:id="@+id/CXH"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#00ff"
                android:text="밴쿠버코울하버 (CXH)"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="centerInside"
                />
        </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>