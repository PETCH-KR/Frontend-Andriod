<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/game1_text" />

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="50dp"
                android:layout_marginLeft="183dp"
                android:layout_height="38dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/game1_nextbtn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/question"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="137dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/game2_quesetion" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="137dp"
                android:scaleType="centerInside"
                android:text="*알맞은 위치에 드래그 해 넣으세요."
                app:srcCompat="@drawable/game2_quesetion" />


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/game2_img1" />

            <ImageView
                android:id="@+id/dog"
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="272dp"
                app:srcCompat="@drawable/game2_bigdog" />

            <TextView
                android:id="@+id/dogInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="290dp"
                android:scaleType="centerInside"
                android:text="대형견"
                app:srcCompat="@drawable/game2_quesetion" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/game2_img2" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>